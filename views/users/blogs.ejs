<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/nav.ejs') %>

        <div class="container mt-3">
            <div class="row">
                <!-- Menu -->

                <div class="col-md-3">

                    <%- include('../partials/category-menu.ejs',categories) %>

                </div>
                <div class="col-md-9">
                    <h1 class="h3 mb-3"  style="display: flex; align-items: center; justify-content: center;">
                        All the coures
                    </h1>

                    <% blogs.forEach(blog=> { %>
                        <% if (blog.onay) { %>


                            <%- include('../partials/blog-card.ejs',blog) %>


                            <% } %>
                                <% }) %>


                                    <% if (blogs.filter(b=> b.onay).length > 3) { %>
                                        <%- include('../partials/pagination.ejs') %>
                                            <% } %>


                </div>
            </div>
        </div>

</body>

</html>