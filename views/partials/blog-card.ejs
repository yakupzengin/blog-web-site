<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="/static/images/<%= image %>" alt="" class="img-fluid">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title" style="display: flex; align-items: center; justify-content: center;">
                    <%= title %>
                </h5>
                
                <p style="background-color: wheat;" class="card-text">
                    <%= content %>
                </p>

            </div>
        </div>
    </div>
</div>